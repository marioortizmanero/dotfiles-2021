# More at https://github.com/baskerville/bspwm/blob/master/examples/sxhkdrc

### WM INDEPENDENT HOTKEYS ###
# Common programs: terminal, browser, explorer, music player, chat
super + {t,b,e,m,c}
    {alacritty, firefox, thunar, spotify, discord}

# Rofi
super + s
    rofi -no-lazy-grab -modi drun -show drun -show-icons

# Close program
alt + {_,shift +}F4
	bspc node -{c,k}

# Lock system
ctrl + alt + super + l
    dm-tool switch-to-greeter

# Screenshots
Print
    (flameshot screen -p ~/Pictures/Screenshots && notify-send "Monitor screenshot taken"); sleep 5; killall -s SIGKILL flameshot
shift + Print
    flameshot gui
control + Print
    (flameshot full -p ~/Pictures/Screenshots && notify-send "Full screenshot taken"); sleep 5; killall flameshot

# Media keys
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +2%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -2%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
    playerctl play-pause
XF86AudioPause
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop
XF86Mail
    firefox https://mail.google.com/mail/u/0/
XF86HomePage         
    firefox
XF86Calculator       
    alacritty python
XF86MonBrightnessUp
    python3 ~/.config/bspwm/scripts/brightness.py +0.1
XF86MonBrightnessDown
    python3 ~/.config/bspwm/scripts/brightness.py -0.1

### BSPWM HOTKEYS ###
# Focus/move the node in the given direction with arrow/vim keys
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus or move windows to other workspaces
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# Rotate window or desktop
super + r
    bspc node -f @parent; bspc node -R 90; bspc node -f @2
super + shift + r
    bspc node @/ -R 90

# Move into the last split
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Shrink a window by moving one of its side outward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Reload config
control + super + alt + r
  pkill -USR1 -x sxhkd; bspc wm -r

# Floating windows
super + space
	bspc query --nodes -n focused.tiled && state=floating || state=tiled; \
	bspc node --state \~$state

# Fullscreen window
super + f
	bspc node focused -t '~fullscreen'

# Scratchpad for hidden windows
super + shift + minus
    bash ~/.config/bspwm/scripts/hide_scratchpad.sh
super + minus
    bash ~/.config/bspwm/scripts/show_scratchpad.sh
